@model ImageServiceWebApp.Models.PhotoInfo
@{
    ViewBag.Title = "ShowPhoto";
}

<h2 style="color:orangered">ShowPhoto</h2>

<div class="img-responsive">
    <a href="#"></a>
    <img src="\@Model.Directory\@Model.Year\@Model.Month\@Model.Name"
         width="304" height="236">
    <div class="caption">
        <h3 style="font-size:medium">@Model.Name</h3>
        <p>@Model.Year, @Model.Month</p>
    </div>
    @Html.ActionLink("Delete", "RemovePhoto", new { infoID = Model.ID }, new { @class = "btn btn-danger" })
</div>