@model ImageServiceWebApp.Models.ImageWebModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
Welcome To Image Service App!!!
<br><br />
<p>Server Status: @Model.ServerConnected</p>
<p>The number of photos in output directory is: @Model.NumberPictuers</p>
<br><br />
<table class="table">
    <tr>

        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
    </tr>
    @foreach (var item in Model.Students)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
        </tr>
    }

</table>


