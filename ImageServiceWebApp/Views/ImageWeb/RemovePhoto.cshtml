@model ImageServiceWebApp.Models.PhotoInfo

@{
    ViewBag.Title = "RemovePhoto";
}

<h2 style="color:red">Do you realy want to remove this photo?</h2>

<div class="img-responsive">
    <a href="#"></a>
    <img src="\@Model.Directory\Thumbnails\@Model.Year\@Model.Month\@Model.Name"
         width="304" height="236">
    <div class="caption">
        <h3 style="font-size:medium">@Model.Name</h3>
        <p>@Model.Year, @Model.Month</p>
    </div>

    @Html.ActionLink("OK", "RemovePhotoFromDirectory", new { infoID = Model.ID }, new { @class = "btn btn-danger" })

    <button type="button" class = "btn btn-primary" id="btnCancel" style="margin:10px">Cancel</button>

</div>

<script>
    $("#btnCancel").click('#backLink', function () {
        history.go(-1);
    });
</script>
